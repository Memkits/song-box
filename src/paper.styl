
*
  box-sizing border-box

body
  margin 0px
  padding 0px
  background hsl(120,80,97)

#upload
  position fixed
  right 0px
  bottom 0px
  background hsl(240,90,90)
  font-family Ubuntu
  border-radius 10px 0px 0px 0px
  width 90px
  overflow hidden
  padding 0px 16px
  z-index 4
  
  #file
    opacity 0.1
    position absolute
    left 0px
    float left

#box
  height 100%
  background hsl(0,90,96)
  margin 0px auto
  padding 0px
  width 1000px
  position relative
  
  #chat, #list
    height 100%
    display inline-block

  #chat
    width 60%
    background hsl(0,0,95)
    float left
    position relative
    padding 100px 0px 200px
    overflow-y scroll
    overflow-x hidden
    white-space nowrap

    #input
      position fixed
      bottom 0px

      input
        border none
        outline none
        display inline-block
        letter-spacing 0px

      #name
        width 90px
        margin-right -5px

      #text
        width 510px
        box-shadow 0px 0px 4px gray

    .post
      font-size 13px
      font-family Ubuntu
      line-height 20px
      height 24px

      &:nth-child(2n)
        background hsl(0,0,87)

      .name, .text
        display inline-block
        padding 1px 2px
        overflow hidden

      .name
        width 90px

      .text
        width 510px

  #list
    width 40%
    background hsl(60,20,90)
    float left
    position relative

  #lunch
    background hsl(60,20,90)

#lunch, #close, #up, #down, #mute
  position absolute
  right -40px
  top 100px
  width 40px
  height 40px
  border-radius 0px 16px 10px 0px
  color white
  font-family Ubuntu
  padding 10px 6px
  text-shadow 0px 0px 10px gray
  overflow hidden
  cursor pointer

#up
  top 160px
  background hsl(0,20,90)
#mute
  top 200px
  background hsl(0,120,80)
#down
  top 240px
  background hsl(0,10,70)

#cover
  width 100%
  height 100%
  position absolute
  top 0px
  background hsla(0,100,100,0.7)
  // display none
  
  #choice
    height 100%
    background hsl(20,80,90)
    margin 0px auto

  #place
    width 600px
    margin 0px auto
    position relative
    height 0px

    #close
      background hsl(20,80,90)

.song
  margin 0px
  padding 10px
  cursor pointer

  &:hover
    text-shadow 0px 0px 3px gray

.queue, .playing
  background hsla(240,90,80,0.4)